rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function isAuthed() { return request.auth != null; }
    
    // Users collection - users can only read/write their own document
    match /users/{uid} {
      allow create: if isAuthed() && request.auth.uid == uid;
      allow read, update: if isAuthed() && request.auth.uid == uid;
      allow delete: if false; // Prevent user deletion
    }
    
    // Recipes collection
    match /recipes/{id} {
      allow create: if isAuthed() && request.resource.data.createdBy == request.auth.uid;
      allow read, update, delete: if isAuthed() && resource.data.createdBy == request.auth.uid;
    }
  }
}