rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - allow authenticated users to upload their own profile picture
    match /profilePictures/{uid}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Recipes - allow authenticated users to read/write their own recipes
    match /recipes/{uid}/{recipeId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}